<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sample="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            android:title="General">

        <com.pavelsikun.seekbarpreference.SeekBarPreference
                android:key="speed_slider"
                android:title="Morse Speed"
                android:summary="Change the speed of the morse flash"
                android:enabled="true"
                android:defaultValue="100"

                sample:msbp_minValue="10"
                sample:msbp_maxValue="200"
                sample:msbp_interval="10"
                sample:msbp_measurementUnit="%"
                sample:msbp_dialogEnabled="false"/>

    </PreferenceCategory>

    <PreferenceCategory
            android:title="Appearance">

        <SwitchPreference
                android:defaultValue="false"
                android:title="Theme" android:key="theme_pref"/>

    </PreferenceCategory>

</PreferenceScreen>